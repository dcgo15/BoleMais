Janela:
    Inicio:
    Calcul:
    Boletim:

<Inicio>:
    name: "Bole+"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        cols: 2
        spacing: 50

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'numeros.jpg'

        Label:
            text: "BOLE+"
            font_size: 45
            bold: True
            font_name: "Roboto-BoldItalic"

        Button:
            text: "Calcular Nota"
            font_size: 36
            size_hint:0.5, 0.2
            pos_hint: {"right":0.75, "top": 6}
            on_release: app.root.current = "Calcular"
            background_color: 0, 0, 0

        Button:
            text: "Ver Boletim"
            font_size: 36
            size_hint:0.5, 0.2
            pos_hint: {"right":0.75, "top": 1}
            on_release: app.root.current = "Nota"
            background_color: 0, 0, 0

        Label:
            size_hint: 1.0, 0.3
            halign: "left"
            valign: "middle"


<Calcul>:
    name: "Calcular"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 5

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'numeros.jpg'

        Label:
            text: "Calcular a Nota"
            font_size: 45
            bold: True
            font_name: "Roboto-BoldItalic"

        Label:
            text: "Digite o minimo de pontos para passar:"
            size_hint: 1.0, 0.3
            halign: "left"
            valign: "middle"
            bold: True

        TextInput:
            id: Num
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False
            valign: "middle"

        Label:
            text: "Quantos pontos voce tem:"
            size_hint: 1.0, 0.3
            halign: "left"
            valign: "middle"
            bold: True
            
            
        TextInput:
            id: Ndois
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False

        Label:
            size_hint: 1.0, 0.3
            halign: "left"
            valign: "middle"


        Button:
            text: "Calcular"
            font_size: 25
            size_hint:0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            on_press: print(float(Num.text) - float(Ndois.text))
            background_color: 0, 0, 0

        Label:
            size_hint: 1.0, 0.2
            halign: "left"
            valign: "middle"
            
        Button:
            text: "Voltar"
            font_size: 25
            size_hint:0.2, 0.2
            pos_hint: {"right":0.2, "top": 0.5}
            on_release: app.root.current = "Bole+"
            background_color: 0, 0, 0

<Boletim>:
    name: "Nota"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 5

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'numeros.jpg'

        Label:
            text: "Boletim"
            font_size: 45
            bold: True
            font_name: "Roboto-BoldItalic"

        Label:
            text: "Materia:"
            size_hint: 1.0, 0.3
            halign: "left"
            valign: "top"
            bold: True

        TextInput:
            id: Materia
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False

        Label:
            text: "Nota 1 ciclo:"
            size_hint: 1.0, 0.3
            halign: "left"
            valign: "middle"
            bold: True
            
        TextInput:
            id: Nota1
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False

        Label:
            text: "Nota 2 ciclo:"
            size_hint: 1.0, 0.3
            halign: "left"
            valign: "middle"
            bold: True
        
            
        TextInput:
            id: Nota2
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False

        Label:
            text: "Nota 3 ciclo:"
            size_hint: 1.0, 0.3
            halign: "left"
            valign: "middle"
            bold: True

        TextInput:
            id: Nota3
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False
            

        Button:
            text: "Adicionar"
            font_size: 25
            size_hint:0.5, 0.4
            pos_hint: {"right":0.75, "top": 0.5}
            on_press: print((Materia.text), float(Nota1.text), float(Nota2.text), float(Nota3.text), "Total:", float(Nota1.text) + float(Nota2.text) + float(Nota3.text))
            background_color: 0, 0, 0

        Label:
            size_hint: 1.0, 0.3
            halign: "left"
            valign: "middle"
            
            
        Button:
            text: "Voltar"
            font_size: 25
            size_hint:0.2, 0.4
            pos_hint: {"right":0.2, "top": 0.5}
            on_release: app.root.current = "Bole+"
            background_color: 0, 0, 0
    
