Janela:
    Inicio:
    Calcul:
    Boletim:

<Inicio>:
    name: "Bole+"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        cols: 2

        Label:
            text: "BOLE+"
            font_size: 45
            bold: True
            font_name: "Roboto-BoldItalic"

        Button:
            text: "Calcular Nota"
            font_size: 36
            size_hint:0.5, 0.2
            pos_hint: {"right":0.75, "top": 1}
            on_release: app.root.current = "Calcular"

        Button:
            text: "Ver Boletim"
            font_size: 36
            size_hint:0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            on_release: app.root.current = "Nota"

<Calcul>:
    name: "Calcular"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Calcular a Nota"
            font_size: 45
            bold: True
            font_name: "Roboto-BoldItalic"

        Label:
            text: "Digite o minimo de pontos para passar:"
            size_hint: 1.0, 1.0
            halign: "left"
            valign: "middle"

        TextInput:
            id: Num
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False
            valign: "middle"

        Label:
            text: "Quantos pontos voce tem:"
            size_hint: 1.0, 1.0
            halign: "left"
            valign: "middle"
            
            
        TextInput:
            id: Ndois
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False


        Button:
            text: "Calcular"
            font_size: 36
            size_hint:0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            on_press: print(float(Num.text) - float(Ndois.text))
            
        Button:
            text: "Voltar"
            font_size: 36
            size_hint:0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            on_release: app.root.current = "Bole+"

<Boletim>:
    name: "Nota"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Boletim"
            font_size: 45
            bold: True
            font_name: "Roboto-BoldItalic"

        TextInput:
            id: Materia
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False
            
        TextInput:
            id: Nota1
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False
        
            
        TextInput:
            id: Nota2
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False
            

        TextInput:
            id: Nota3
            size_hint: 0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            multiline: False
            

        Button:
            text: "Adicionar"
            font_size: 36
            size_hint:0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            on_press: print((Materia.text), float(Nota1.text), float(Nota2.text), float(Nota3.text), "Total:", float(Nota1.text) + float(Nota2.text) + float(Nota3.text))
            
        Button:
            text: "Voltar"
            font_size: 36
            size_hint:0.5, 0.2
            pos_hint: {"right":0.75, "top": 0.5}
            on_release: app.root.current = "Bole+"
    
